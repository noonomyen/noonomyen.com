{
  "name": "error-page",
  "scripts": {
    "build": "npx ts-node --project ./tsconfig.json build.ts",
    "build.release": "npx ts-node --project ./tsconfig.json build.ts --release",
    "build.css": "npx tailwindcss --input ./src/tailwind-directives.css --output ./dist/page.tailwind.css --config ./tailwind.config.js",
    "build.ts": "npx tsc --project ./src/tsconfig.json",
    "dev.css.start": "npx tailwindcss --input ./src/tailwind-directives.css --output ./dist/page.tailwind.css --config ./tailwind.config.js --watch",
    "dev.ts.start": "npx nodemon --watch ./src/page.ts --exec npx tsc --project ./src/tsconfig.json"
  },
  "dependencies": {
    "@types/node": "^20.2.3",
    "cheerio": "^1.0.0-rc.12",
    "nodemon": "^2.0.22",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
